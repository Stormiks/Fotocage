{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "es2015",
        "target": "ES6",
        "checkJs": false,
        "experimentalDecorators": true,
        "paths": {
          "~/*": ["./"],
          "@/*": ["./src/*"],
          "views/*": ["./src/views/*"],
          "layoutAuth/*": ["./src/views/layouts/AuthLayout/*"],
          "layoutDefault/*": ["./src/views/layouts/DefaultLayout/*"],
          "layoutError/*": ["./src/views/layouts/ErrorLayout/*"],
          "assets/*": ["./src/assets/*"],
          "router/*": ["./src/router/*"],
          "components/*": ["./src/components/*"],
          "plugins/*": ["./src/components/plugins/*"],
          "pkg/*": ["./packages/*"],
        }
    },
    "exclude": ["./node_modules", "./dist"],
    "include": ["./src/**/*.js", "./src/**/*.vue"]
}
